---
const { title = "my manual" } = Astro.props;
---
<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="page">
      <header class="site-header">
        <div class="header-inner">
          <div class="title-block">
            <h1>{title}</h1>
            <div class="subtitle">personal knowledge vault</div>
          </div>
        </div>
      </header>

      <div class="filters">
        <slot name="filters" />
      </div>

      <div class="main-grid">
        <main class="content">
          <slot />
        </main>
        <aside class="side-rail">
          <div class="side-rail-box">
            <div class="side-rail-title">SIDE</div>
            <div class="side-rail-glow"></div>
          </div>
        </aside>
      </div>
    </div>
  </body>
</html>

<style>
  :global(:root) {
    color-scheme: dark;
    --bg: #0b0b10;
    --bg-deep: #050507;
    --ink: #e6e6ea;
    --muted: #9aa0aa;
    --neon-red: #ff3b4f;
    --neon-red-soft: rgba(255, 59, 79, 0.25);
    --neon-cyan: #1de9d6;
    --neon-cyan-soft: rgba(29, 233, 214, 0.22);
    --card: #11121a;
    --card-border: rgba(255, 59, 79, 0.25);
    --grid-gap: 24px;
  }

  :global(*) {
    box-sizing: border-box;
  }

  :global(body) {
    margin: 0;
    font-family: "Oxanium", "Share Tech Mono", "Courier New", monospace;
    background: radial-gradient(circle at 20% 0%, rgba(29, 233, 214, 0.08), transparent 50%),
      radial-gradient(circle at 80% 10%, rgba(255, 59, 79, 0.1), transparent 55%),
      var(--bg-deep);
    color: var(--ink);
    min-height: 100vh;
  }

  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  .page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .site-header {
    position: relative;
    padding: 40px 20px 32px;
    min-height: clamp(220px, 38vh, 460px);
    background-image: linear-gradient(120deg, rgba(7, 7, 12, 0.6), rgba(12, 12, 22, 0.45)),
      url("/img/header.jpg");
    background-size: cover;
    background-position: center;
    border-bottom: 1px solid rgba(255, 59, 79, 0.35);
  }

  .site-header::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(255, 59, 79, 0.16), rgba(29, 233, 214, 0.08));
    mix-blend-mode: screen;
    pointer-events: none;
  }

  .header-inner {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
  }

  .title-block h1 {
    margin: 0;
    font-size: clamp(2rem, 4vw, 3.2rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    text-shadow: 0 0 18px rgba(255, 59, 79, 0.4);
  }

  .subtitle {
    margin-top: 6px;
    font-size: 0.9rem;
    color: var(--muted);
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .filters {
    max-width: 1200px;
    margin: 0 auto;
    padding: 18px 20px 0;
  }

  .main-grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 220px;
    gap: var(--grid-gap);
    max-width: 1200px;
    margin: 0 auto;
    padding: 22px 20px 40px;
    width: 100%;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .side-rail {
    position: relative;
  }

  .side-rail-box {
    border: 1px solid rgba(29, 233, 214, 0.35);
    border-radius: 12px;
    padding: 16px;
    min-height: 240px;
    background: linear-gradient(160deg, rgba(17, 18, 26, 0.9), rgba(8, 8, 12, 0.9));
    box-shadow: 0 0 24px rgba(29, 233, 214, 0.15);
  }

  .side-rail-title {
    font-size: 0.8rem;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: var(--muted);
    margin-bottom: 16px;
  }

  .side-rail-glow {
    height: 6px;
    border-radius: 6px;
    background: linear-gradient(90deg, rgba(255, 59, 79, 0.8), rgba(29, 233, 214, 0.9));
    box-shadow: 0 0 18px rgba(29, 233, 214, 0.5);
  }

  @media (max-width: 920px) {
    .main-grid {
      grid-template-columns: minmax(0, 1fr) 180px;
    }
  }

  @media (max-width: 760px) {
    .site-header {
      min-height: clamp(150px, 24vh, 200px);
      padding: 24px 18px 22px;
    }

    .main-grid {
      grid-template-columns: 1fr;
    }

    .side-rail {
      order: 2;
    }

    .side-rail-box {
      min-height: 160px;
    }
  }
</style>
