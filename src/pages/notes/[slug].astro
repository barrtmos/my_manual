---
import { getCollection } from "astro:content";
import SiteLayout from "../../layouts/SiteLayout.astro";
import FilterBar from "../../components/FilterBar.astro";

export async function getStaticPaths() {
  const notes = await getCollection("notes", ({ data }) => !data.draft);
  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { note }
  }));
}

const { note } = Astro.props;
const { Content } = await note.render();
---

<SiteLayout title="my manual">
  <FilterBar
    slot="filters"
    mode="filter"
    current="notes"
    activeStructural={note.data.structural}
    activeTopics={note.data.topics}
  />

  <article class="note-full">
    <div class="note-back">
      <a class="note-back-link" href="/notes">НАЗАД</a>
    </div>
    <header class="note-full-head">
      <h2>{note.data.title}</h2>
      <div class="note-meta">
        <span>{note.data.structural}</span>
        <span>{(Array.isArray(note.data.topics) ? note.data.topics : [note.data.topics]).filter(Boolean).join(" • ")}</span>
      </div>
    </header>
    <div class="note-body">
      <Content />
    </div>
  </article>
</SiteLayout>

<style>
  .note-full {
    border: 1px solid var(--card-border);
    border-radius: 16px;
    background: var(--card);
    padding: 24px;
    box-shadow: 0 0 26px rgba(255, 59, 79, 0.12);
  }

  .note-back {
    margin-bottom: 14px;
  }

  .note-back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 14px;
    border: 1px solid rgba(29, 233, 214, 0.35);
    border-radius: 10px;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.72rem;
    color: var(--ink);
    background: linear-gradient(135deg, rgba(12, 12, 18, 0.9), rgba(10, 10, 14, 0.9));
    box-shadow: 0 0 16px rgba(29, 233, 214, 0.15);
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
  }

  .note-back-link:hover {
    transform: translateY(-1px);
    border-color: rgba(255, 59, 79, 0.55);
    box-shadow: 0 0 18px rgba(255, 59, 79, 0.2);
  }

  .note-full-head h2 {
    margin: 0 0 8px;
    font-size: 1.6rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
  }

  .note-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    font-size: 0.72rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .note-body :global(p) {
    line-height: 1.6;
    color: #d7d7df;
  }

  .note-body :global(h3) {
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .note-body :global(code) {
    background: rgba(29, 233, 214, 0.12);
    padding: 2px 6px;
    border-radius: 6px;
  }

  .note-body :global(pre) {
    background: rgba(9, 10, 16, 0.9);
    padding: 12px;
    border-radius: 10px;
    border: 1px solid rgba(29, 233, 214, 0.25);
    overflow-x: auto;
  }
</style>
